@model The_Cozy_Kettle.ViewModels.RegisterViewModel

<style>
    body {
        background-color: #f8f4e3; 
        font-family: 'Arial', sans-serif;
        color: #4e342e; 
        margin: 0;
        padding: 0;
    }

    .container {
        margin-top: 50px;
    }

    .form-title {
        text-align: center;
        font-size: 2rem;
        color: #3e2723; 
        font-weight: bold;
    }

    .form-subtitle {
        font-family: 'Pacifico', cursive;
        text-align: center;
        font-size: 1.25rem;
        color: #6d4c41; 
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-size: 1rem;
        font-weight: 600;
        color: #3e2723;
    }

    .form-control {
        border: 1px solid #d7ccc8; 
        border-radius: 5px;
        padding: 10px;
        font-size: 1rem;
        width: 100%;
    }

        .form-control:focus {
            border-color: #6d4c41;
            box-shadow: 0 0 5px rgba(109, 76, 65, 0.5);
        }

    .btn-coffee {
        background-color: #6d4c41;
        color: white;
        border: none;
        padding: 12px 25px;
        font-size: 1.1rem;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-coffee:hover {
            background-color: #4e342e; 
        }

   

    .loginForm {
        background-color: white;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }
</style>

<div class="container">
    <div class="row loginForm">
        <div class="col-md-6 offset-md-3">
            <h2 class="form-title">Register now! 😊</h2>
            <br />
            <form asp-controller="Account" asp-action="Register" method="post">
                <h4 class="form-subtitle">Experience the warmth of The Cozy Kettle..!</h4>
                

                <!-- Username Field -->
                <div class="form-group">
                    <label asp-for="UserName" class="form-label">Username</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <!-- Password Field -->
                <div class="form-group">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password Field -->
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group text-center">
                    <input type="submit" class="btn btn-coffee" value="Register" />
                </div>
            </form>
        </div>
    </div>
</div>